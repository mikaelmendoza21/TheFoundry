@{
    ChiefOfTheFoundry.Models.MtgCard card = ViewBag.Card;
}
<div>
    <div>
        <div class="form-group">
            <h1>@card.Name</h1>
            <img src="@card.ImageUrl" />
            <p>@card.Text</p>
            <label for="numberOfCopies">Card Copies</label>
            <input id="mtgCardId" name="mtgCardId" type="hidden" value="@card.Id" />
            <input type="number" id="numberOfCopies" class="form-control spaced col-lg-4" placeholder="Number of copies..">
            <label for="isFoil">Is Foil<input type="checkbox" id="isFoil" name="isFoil" class="form-control spaced"/></label>
            <input type="text" class="form-control spaced" id="notes" placeholder="Notes.." />
        </div>
        <button id="addCardToCollection" type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>